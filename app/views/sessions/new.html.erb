<% title "登录" %>

<p>没有账号吗 <%= link_to "注册!", signup_path %></p>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "用户名或者邮箱" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password,"密码" %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "登录" %></p>
<% end %>
