<% title "注册" %>

<p>已经有账号了吗?<%= link_to "登录", login_path %>.</p>

<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username,"用户" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "邮箱" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password,"密码" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "再次确认" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "注册" %></p>
<% end %>
